# Database Configuration
POSTGRES_DB=bist_trading
POSTGRES_USER=bist_user
POSTGRES_PASSWORD=bist_password
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=bist-trading-group

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Security Configuration
JWT_SECRET=your-256-bit-secret-key-here
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
PGADMIN_EMAIL=admin@bist.com
PGADMIN_PASSWORD=admin

# External APIs
BIST_API_URL=https://api.bist.com
BIST_API_KEY=your-bist-api-key
BIST_API_SECRET=your-bist-api-secret

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# File Storage
UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE=10MB

# Feature Flags
FEATURE_REAL_TIME_TRADING=true
FEATURE_ADVANCED_ANALYTICS=false

# Logging
LOG_LEVEL=INFO
LOG_PATH=./logs